{% extends "menu.twig" %}

{% block conteudo %}
    <div class="container pb-4">
        <form method="post" action="/consulta/inserir">
            <div class="row">
                <div class="text-center">
                    <h5>Informações da Consulta</h5>
                </div>
            </div>
            <div class="row">
                <div class="col-md mb-3">
                    <div class="form-floating">
                        <input type="text" name="descricao" class="form-control " id="descricao"
                               value="{{ attribute(consulta, 'getDescricao') }}"
                               contentEditable="true" placeholder="Descricao" required/>
                        <label for="descricao">Descrição</label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md mb-3">
                    <div class="form-floating">
                        <select name="presidente" class="form-select" id="presidente" aria-label="Escolha o presidente da comissão">
                            <option>Selecione o Presidente</option>
                            {% for usuario in usuarios %}
                                <option value="{{ usuario.codUsuario }}">
                                    {{ usuario.cpf }} - {{ usuario.nome }}
                                </option>
                            {% endfor %}
                        </select>
                        <label for="presidente">Presidente da comissão</label>
                    </div>
                </div>
            </div>
            <div class="container text-center">
                <div class="row justify-content-center">
                    <div class="form-group col-md-{{ numCol }} ml-auto mr-auto">
                        <button type="submit" class="btn btn-primary">
                            Inserir
                        </button>
                        <button type="button" class="btn btn-secondary"
                                onclick="window.location.href='/usuario'">
                            Voltar
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
{% endblock %}